<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backg"
        tools:context=".LandingPage">

        <!-- TODO: Update blank fragment layout -->

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@id/txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txt"
            android:layout_marginBottom="12dp"
            android:src="@drawable/seen"/>
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/okay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Welcome To Vernsa"
            android:textColor="@color/black"
            android:textSize="24sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/txt"
            android:background="@drawable/btn_login_select"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Log in"
            android:fontFamily="@font/testing"
            android:textColor="@color/enable"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginTop="44dp"
            android:layout_marginHorizontal="52dp"
            android:layout_below="@id/txt"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="52dp"
            android:layout_marginTop="32dp"
            android:textColor="@color/white"
            android:fontFamily="@font/testing"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:background="@drawable/btn_createaccount_selection"
            android:text="Get Started"
            app:layout_constraintTop_toBottomOf="@id/login"
            tools:layout_editor_absoluteX="22dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>