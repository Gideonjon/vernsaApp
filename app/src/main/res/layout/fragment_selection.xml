<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".SelectionFragment">

        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="12dp"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@id/txt"
            android:layout_centerHorizontal="true"
            android:src="@drawable/transparent" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Set Up Your Vernsa Account Under 1 Minute"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/personal_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_login_select"
            android:text="Personal Account"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/business_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_account"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_createaccount_selection"
            android:text="Business Account"
            android:textAllCaps="false"
            android:textColor="@color/white" />





    </RelativeLayout>
</ScrollView>