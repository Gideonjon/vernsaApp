<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.SecondScreen">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Welcome To"
        android:textAlignment="center"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




        <ImageView
            android:id="@+id/img"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:padding="20dp"
            android:background="@drawable/circle"
            android:src="@drawable/transfer"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@id/txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/bla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Safe funding and withdrawals"
        app:layout_constraintTop_toBottomOf="@id/img"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/buh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="easy with"
        app:layout_constraintTop_toBottomOf="@id/bla"
        app:layout_constraintStart_toStartOf="@id/bla"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/vern"
        android:fontFamily="@font/poppins_regular"/>


    <TextView
        android:id="@+id/vern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VERNSA"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/enable"
        app:layout_constraintTop_toTopOf="@id/buh"
        app:layout_constraintStart_toEndOf="@id/buh"
        app:layout_constraintEnd_toEndOf="@id/bla"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>