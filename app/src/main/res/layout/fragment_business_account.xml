<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".BusinessAccount">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="22dp"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/leg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Create Your Business Account"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/arrow" />

    <TextView
        android:id="@+id/okay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Business Name"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/business_name"
        app:layout_constraintTop_toBottomOf="@id/leg" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/business_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="7dp"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/okay">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/businessname_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/kk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Creator's First Name"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/business_name"
        app:layout_constraintTop_toBottomOf="@id/business_name" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="7dp"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/kk">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/firstName_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/pig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Creator's Last Name"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/firstname"
        app:layout_constraintTop_toBottomOf="@id/firstname" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="7dp"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/pig">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lastname_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Business Phone Number"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/lastname"
        app:layout_constraintTop_toBottomOf="@id/lastname" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="7dp"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/phone">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phonenumber_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/peak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Business Email Address"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/phonenumber"
        app:layout_constraintTop_toBottomOf="@id/phonenumber" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/peak">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Website (optional)"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/email" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/website"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="22dp"
        app:layout_constraintTop_toBottomOf="@id/web"
        android:layout_height="wrap_content">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/website_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/website"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/website"
        android:text="Business UserName" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/user">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username_et"
            android:layout_width="match_parent"
            android:background="@drawable/card"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Business Type"
        app:layout_constraintTop_toBottomOf="@id/userName"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/userName"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/personalBusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/type"
        android:layout_marginTop="12dp"
        android:background="@color/backg"
        app:cardCornerRadius="4dp"
        android:backgroundTint="@color/background"
        app:cardElevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="29dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Business"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="7dp"
                android:fontFamily="casual"
                android:layout_marginStart="22dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/sew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A Business That Is \n Owned By You Alone"
                app:layout_constraintTop_toBottomOf="@id/look"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="@id/look"
                android:layout_marginTop="7dp" />


            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/look"
                app:layout_constraintBottom_toBottomOf="@id/sew"
                android:buttonTint="@color/white"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/startupBusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/personalBusiness"
        android:layout_marginTop="12dp"
        android:background="@color/backg"
        app:cardCornerRadius="4dp"
        android:backgroundTint="@color/background"
        app:cardElevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="29dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/loop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Startup Business"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="casual"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="7dp"
                android:layout_marginStart="22dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/sewed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A Newly startup business \n which is in  development"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/loop"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@id/loop"
                android:layout_marginTop="7dp" />


            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/loop"
                app:layout_constraintBottom_toBottomOf="@id/sewed"
                android:buttonTint="@color/white"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/registeredBusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/startupBusiness"
        android:layout_marginTop="12dp"
        android:background="@color/backg"
        app:cardCornerRadius="4dp"
        android:backgroundTint="@color/background"
        app:cardElevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="29dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/looked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registered Business"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="7dp"
                android:fontFamily="casual"
                android:layout_marginStart="22dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/sewing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A Business That is \n Legally Registered And Already In \n Existence"
                app:layout_constraintTop_toBottomOf="@id/looked"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/looked"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="7dp" />


            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/looked"
                app:layout_constraintBottom_toBottomOf="@id/sewing"
                android:buttonTint="@color/white"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        app:layout_constraintTop_toBottomOf="@id/registeredBusiness"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/email"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/psw"
        android:layout_marginTop="7dp"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/white"
        app:errorEnabled="true"
        android:layout_marginHorizontal="16dp">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/psw_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card"/>
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I have read. understand and agree Vernsa's"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:checked="true"
        android:buttonTint="@color/enable"
        android:textColor="@color/white"/>



</androidx.constraintlayout.widget.ConstraintLayout>